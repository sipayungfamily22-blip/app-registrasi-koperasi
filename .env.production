# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration (ubah ke sqlite untuk development)
DATABASE_TYPE=sqlite

# Security
SECRET_KEY=your-secure-random-key-change-this-in-production-min-32-chars

# HTTPS Configuration - set ke true jika menggunakan HTTPS
HTTPS_ENABLED=false

# Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=example.mail@gmail.com
MAIL_PASSWORD=password123
MAIL_DEFAULT_SENDER=noreply@koperasi.local

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_FILE=logs/app.log
LOG_LEVEL=INFO

# Application
APP_NAME=Aplikasi Pendaftaran Koperasi
APP_VERSION=1.0.0
